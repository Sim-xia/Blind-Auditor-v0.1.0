{
  "project_name": "BlindAuditor",
  "strict_mode": true,
  "max_retries": 3,
  "rules": [
    {
      "id": "SEC-001",
      "severity": "CRITICAL",
      "description": "严禁在代码中硬编码 API Key、密码或任何敏感信息，必须使用环境变量。",
      "weight": 100
    },
    {
      "id": "SEC-002",
      "severity": "CRITICAL",
      "description": "所有用户输入必须进行验证和清理，防止 SQL 注入和 XSS 攻击。",
      "weight": 100
    },
    {
      "id": "STYLE-001",
      "severity": "PREFERENCE",
      "description": "所有异步函数必须使用 async/await，禁止使用 .then() 链式调用。",
      "weight": 20
    },
    {
      "id": "STYLE-002",
      "severity": "PREFERENCE",
      "description": "变量和函数命名必须使用 snake_case（Python）或 camelCase（JavaScript/TypeScript）。",
      "weight": 15
    },
    {
      "id": "QUALITY-001",
      "severity": "WARNING",
      "description": "函数长度不应超过 50 行，复杂逻辑应拆分为多个小函数。",
      "weight": 30
    },
    {
      "id": "QUALITY-002",
      "severity": "WARNING",
      "description": "必须为所有公共函数和类添加文档注释（docstring）。",
      "weight": 25
    }
  ]
}
